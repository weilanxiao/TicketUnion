<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_tao_kou_ling_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/tv_tao_kou_ling"
            android:textSize="14sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_tao_kou_ling_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">
        <com.miyako.ticketunion.custom.LoadingView
            android:layout_width="33dp"
            android:layout_height="33dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tao_kou_ling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tao_kou_ling_cover"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@color/gray"
            android:layout_marginTop="33dp"/>


        <EditText
            android:id="@+id/et_tao_kou_ling"
            android:layout_width="244dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="#4a4a4a"
            android:gravity="center"
            android:focusable="false"
            android:background="@drawable/shape_tao_kou_ling_box_bg"/>

        <Button
            android:id="@+id/btn_ling_juan"
            android:layout_width="141dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="领卷"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_button_box_bg"/>
    </LinearLayout>


</LinearLayout>